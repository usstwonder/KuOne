<?xml version="1.0" encoding="utf-8"?>
<com.kukool.iosapp.weather.ui.WeatherSettingsListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/iphone_weathersettings_rectnoround_white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true" >

        <!-- 左边圆圈 -->
        <!--
        <com.kukool.iosapp.weather.ui.SmsLeftYuan
            android:id="@+id/img_iphone_item_mius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="visible" />  -->
        <!-- 城市 -->

        <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:paddingLeft="10dip"
                android:layout_toLeftOf="@+id/temperature"
                android:textColor="#FFFFFF"
                android:textSize="28sp"/>

        <TextView
                android:id="@id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:paddingRight="10dip"
                android:layout_toLeftOf="@+id/del_button"
                android:textColor="#FFFFFF"
                android:textSize="25sp"/>
        <!-- 移动排序按钮 -->

        <!--
        <Button
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:drawable/iphone_icon_move"
            android:clickable="false"
            android:visibility="visible" />    -->
        <!-- 删除按钮 -->

        <Button
            android:id="@+id/del_button"
            style="@style/MinusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="0dp"
             android:gravity="center"
            android:textSize="17sp"
            android:paddingLeft="0dip"
            android:paddingRight="0dip"
            android:textColor="@color/white"
            android:text="@string/delete"
            android:visibility="invisible" />
    </RelativeLayout>

</com.kukool.iosapp.weather.ui.WeatherSettingsListItem>